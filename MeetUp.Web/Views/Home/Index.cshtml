@model  MeetUp.Web.Models.Home.UserPageListingModel
@{
    ViewBag.Title = "Home Page";
}

<h1 class="my-4">
    Page Heading
    <small>Secondary Text</small>
</h1>
<div class="row">
    @foreach (var user in Model.Users)
    {
        var firstImageName = user.Images.Any() ? user.Images.First().Name : "";

        <div class="col-lg-4 col-sm-6 portfolio-item">
            <div class="card h-100">
                <a href="/users/view/@user.Id">
                    <img class="card-img-top" src="~/Home/GetImage/@firstImageName" alt="">
                    <img class="card-img-top" src="" alt="">
                </a>
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="#">@user.Name</a>
                    </h4>
                    <p class="card-text">
                        @user.Description
                    </p>
                </div>
            </div>
        </div>
    }

</div>

<ul class="pagination justify-content-center">
    @{
        var disablePrev = "";
        var disableNext = "";

        if (Model.CurrentPage == 1)
        {
            disablePrev = "disabled";
        }
        if (Model.CurrentPage == Model.TotalPages)
        {
            disableNext = "disabled";
        }
    }
    <li class="page-item @disablePrev">
        <a class="page-link" href="/?page=@Model.PreviousPage" tabindex="-1">Previous</a>
    </li>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        var active = "";
        if (i == Model.CurrentPage)
        {
            active = "active";
        }
        <li class="page-item @active"><a class="page-link" href="/?page=@i">@i</a></li>
    }
    <li class="page-item @disableNext">
        <a class="page-link" href="/?page=@Model.NextPage">Next</a>
    </li>
</ul>


