<Page x:Class="MeetUp.Admin.CreateCityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MeetUp.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateCityPage">

    <Grid>

        <TextBox Text="{Binding Path=UserId}"/>

        <Label Content="Create City" HorizontalAlignment="Left" Margin="50,10,0,0" VerticalAlignment="Top" Height="32" Width="199"/>
        
        <Label Content="Name" HorizontalAlignment="Left" Margin="50,57,0,0" VerticalAlignment="Top" Height="28" Width="58"/>
        <TextBox HorizontalAlignment="Left" Name="Name" Height="23" Margin="129,57,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

        <Button Content="Create" HorizontalAlignment="Left" Margin="50,141,0,0" VerticalAlignment="Top" Width="199" Click="Button_Click" Height="32"/>

    </Grid>
</Page>
