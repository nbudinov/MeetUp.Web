<Page x:Class="MeetUp.Admin.LoginWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MeetUp.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginWindow">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="43,28,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Height="24" Width="60"/>

        <TextBlock HorizontalAlignment="Left" Margin="43,65,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Height="24" Width="60"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="103,66,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Name="EmailText" />

        <TextBlock HorizontalAlignment="Left" Margin="43,107,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Height="24" Width="60"/>

        <Button Content="Login" HorizontalAlignment="Left" Margin="43,159,0,0" VerticalAlignment="Top" Width="180" Height="33" Click="Button_Click"/>
        <PasswordBox HorizontalAlignment="Left" Margin="103,107,0,0" VerticalAlignment="Top" Height="24" Width="120" Name="PasswordText"/>

    </Grid>
</Page>
